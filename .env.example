# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY={{FIREBASE_API_KEY}}
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN={{FIREBASE_PROJECT_ID}}.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID={{FIREBASE_PROJECT_ID}}
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET={{FIREBASE_PROJECT_ID}}.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID={{FIREBASE_MESSAGING_SENDER_ID}}
NEXT_PUBLIC_FIREBASE_APP_ID={{FIREBASE_APP_ID}}
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID={{FIREBASE_MEASUREMENT_ID}}

# Firebase Admin SDK (Server-side only)
FIREBASE_PROJECT_ID={{FIREBASE_PROJECT_ID}}
FIREBASE_CLIENT_EMAIL={{FIREBASE_CLIENT_EMAIL}}
FIREBASE_PRIVATE_KEY="{{FIREBASE_PRIVATE_KEY}}"

# Stripe Configuration
STRIPE_SECRET_KEY={{STRIPE_SECRET_KEY}}
STRIPE_PUBLISHABLE_KEY={{STRIPE_PUBLISHABLE_KEY}}
STRIPE_WEBHOOK_SECRET={{STRIPE_WEBHOOK_SECRET}}

# PWA Configuration
NEXT_PUBLIC_ENABLE_PWA=true

# App Configuration
NEXT_PUBLIC_APP_URL=https://cursor-v1.vercel.app
NODE_ENV=production
