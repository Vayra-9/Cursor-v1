{
  "name": "VAYRA Frontend Smoke Tests",
  "description": "Critical smoke tests for VAYRA SaaS platform",
  "baseUrl": "http://localhost:5173",
  "timeout": 30000,
  "retries": 2,
  "tests": [
    {
      "name": "pricing_page",
      "description": "Verify pricing page displays all plan tiers",
      "path": "/pricing",
      "expects": {
        "texts": ["Free", "Starter", "Pro", "Premium"]
      }
    },
    {
      "name": "pwa_manifest",
      "description": "Verify PWA manifest is accessible",
      "asset": "/manifest.webmanifest",
      "expectStatusBelow": 400
    },
    {
      "name": "auth_login_to_dashboard",
      "description": "Test authentication flow from login to dashboard",
      "path": "/auth",
      "fallbackPath": "/login",
      "steps": [
        {
          "action": "fill",
          "selector": "input[type='email'], input[name='email']",
          "value": "testsprite+local@vayra.app"
        },
        {
          "action": "fill",
          "selector": "input[type='password'], input[name='password']",
          "value": "VayraTest!123"
        },
        {
          "action": "click",
          "selector": "button[type='submit'], button:contains('Sign In'), button:contains('Log In')",
          "regex": "/sign in|log in/i"
        },
        {
          "action": "expect",
          "urlContains": "/dashboard",
          "timeout": 15000
        }
      ]
    },
    {
      "name": "dashboard_gating_free",
      "description": "Verify dashboard shows upgrade prompts for free users",
      "path": "/dashboard",
      "expects": {
        "oneOfText": ["Upgrade", "Get Premium", "Unlock Pro", "Upgrade Plan"]
      }
    }
  ]
}
